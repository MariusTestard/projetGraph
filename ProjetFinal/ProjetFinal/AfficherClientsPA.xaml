<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ProjetFinal.AfficherClientsPA"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjetFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="afficherClientsPA">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom">
            <Button 
                x:Name="btnAjouter"
                Content="Ajouter"
                Background="DarkOliveGreen"
                Click="btnAjouter_Click"
                Margin="0 0 0 2"/>
        </StackPanel>

        <!-- LA LISTVIEW -->
        <ListView 
            x:Name="lvListeClients"
            SelectionMode="Single"
            ShowsScrollingPlaceholders="True"
            Height="650"
            Width="420"
            BorderThickness="1"
            BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
            Grid.Row="1"
            Grid.Column="1"
            SelectionChanged="lvListeClients_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:Client">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse 
                                    x:Name="Ellipse"
                                    Grid.RowSpan="4"
                                    Width ="32"
                                    Height="32"
                                    Margin="6"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Fill="{ThemeResource SystemControlBackgroundBaseMediumBrush}"/>
                            <TextBlock 
                                    Grid.Column="1"
                                    Text="{x:Bind IdClient}"
                                    x:Phase="1"
                                    Style="{ThemeResource BaseTextBlockStyle}"
                                    Margin="12,6,0,6"
                                    FontWeight="Bold"/>
                            <TextBlock  
                                    Grid.Column="1"
                                    Grid.Row="1"
                                    Text="{x:Bind Nom}"
                                    x:Phase="2"
                                    Style="{ThemeResource BodyTextBlockStyle}"
                                    Margin="12,0,0,6"/>
                            <TextBlock  
                                    Grid.Column="1"
                                    Grid.Row="2"
                                    Text="{x:Bind Adresse}"
                                    x:Phase="2"
                                    Style="{ThemeResource BodyTextBlockStyle}"
                                    Margin="12,0,0,6"/>
                            <TextBlock  
                                    Grid.Column="1"
                                    Grid.Row="3"
                                    Text="{x:Bind Email}"
                                    x:Phase="2"
                                    Style="{ThemeResource BodyTextBlockStyle}"
                                    Margin="12,0,0,6"/>

                        </Grid>
                        <StackPanel 
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                            
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
